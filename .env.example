# ===== BASE DE DATOS =====
# URL de conexión a MySQL (Railway convierte MYSQL_URL a DATABASE_URL automáticamente)
DATABASE_URL=mysql+pymysql://user:password@host:3306/database

# ===== MICROSERVICIOS (Railway URLs) =====
# Backend Spring Boot (Proyectos y Usuarios)
SPRING_BOOT_URL=https://backspring-production-xxxx.up.railway.app/api

# Backend Jakarta EE (Asesorías) - IMPORTANTE: Incluir /backproyecto en la ruta
JAKARTA_EE_URL=https://portafoliobackend-production-xxxx.up.railway.app/backproyecto/api

# ===== CONFIGURACIÓN DE EMAIL (EmailJS) =====
# Obtener credenciales en: https://dashboard.emailjs.com
EMAILJS_SERVICE_ID=service_xxxxx
EMAILJS_PUBLIC_KEY=tu_public_key
EMAILJS_PRIVATE_KEY=tu_private_key

# Template IDs - Crear en EmailJS Dashboard (ver EMAILJS_SETUP.md)
EMAILJS_TEMPLATE_NUEVA_ASESORIA=template_nueva_asesoria
EMAILJS_TEMPLATE_APROBADA=template_aprobada
EMAILJS_TEMPLATE_RECHAZADA=template_rechazada
EMAILJS_TEMPLATE_RECORDATORIO=template_recordatorio
EMAILJS_TEMPLATE_GENERICO=template_generico

EMAIL_FROM_NAME=Portafolio Devs

# ===== TWILIO WHATSAPP =====
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=tu_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ===== CONFIGURACIÓN DEL SERVIDOR =====
API_PORT=8080
DEBUG=False

# ===== FRONTEND =====
FRONTEND_URL=http://localhost:4200

# ===== REDIS (opcional) =====
REDIS_URL=redis://localhost:6379/0
